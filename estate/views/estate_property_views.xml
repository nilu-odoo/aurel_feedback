<odoo>
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="context">{'search_default_available': 1}</field>
    </record>
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name" string="Property Name" />
                <field name="bedrooms"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="expected_price" string="Maximum expected price" filter_domain="[('expected_price', '&lt;=', self)]"/>
                <field name="living_area" string="Minimal living area (sqm)" filter_domain="[('living_area', '&gt;=', self)]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Available" name="available" domain="[('date_availability', '&lt;=', context_today().strftime('%%Y-%%m-%%d')), ('state', 'in', ('new', 'offer_received'))]"/>
                <group expand="1" string="Group By">
                    <filter string="Postcode Group" name="postcode" context="{'group_by': 'postcode', 'residual_visible': True}"/>
                </group>
            </search>
        </field>
    </record>
    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_set_sold" type="object" string="Sold" class="oe_highlight" 
                    invisible="state not in ['offer_accepted']"/>
                    <button name="action_cancel" type="object" string="Cancel" class="oe_highlight" 
                     invisible="state not in ['new','offer_received','offer_accepted']"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,cancelled,sold,offer_accepted,offer_received"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <widget name="web_ribbon" title="Inactive" bg_color="bg-danger" 
                    invisible = "'active'"
                   />
                    <h1 class="mb16">
                        <field name="name" class="o_text_overflow" placeholder="Set a name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_edit_color': True}"/>
                    <group>
                        <group>
                            <field name="property_type_id" options="{'no_create': True, 'no_edit': True}"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                            <field name="best_price"/>
                            <field name="expected_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group string="Description">
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area" 
                                invisible="'garden' != True"/>
                                <field name="garden_orientation" invisible="'garden' != True"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids"
                            readonly="'state' in ('offer_accepted', 'cancelled', 'sold')">
                                <tree string="Offers" editable="True" default_order="deadline_date" decoration-success="state=='accepted'" decoration-danger="state=='refused'">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="validity"/>
                                    <field name="deadline_date"/>
                                    <button name="action_accept_offer" string="Accept" type="object" icon="fa-check" 
                                    invisible="('state' == 'refused') or ('state' == 'accepted')"/>
                                    <button name="action_refuse_offer" string="Refuse" type="object" icon="fa-times" invisible="('state' == 'refused') or ('state' == 'accepted')"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="salesperson_id"/>
                                <field name="buyer_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree decoration-success="state in ('offer_accepted', 'offer_received')" decoration-bf="state=='offer_accepted'" decoration-muted="state=='sold'">
                <field name="name" string="Title"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="date_availability" optional="hide"/>
                <field name="state" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="estate_property_view_kanban" model="ir.ui.view">
        <field name="name">estate.property.kanban</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile o_kanban_small_column" default_group_by="property_type_id" records_draggable="false">
                <field name="state"/>
                <field name="expected_price"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="o_kanban_record_title oe_kanban_details">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div>
                                <span t-esc="'Expected Price: ' + record.expected_price.value"/>
                            </div>
                            <div t-if="record.state.raw_value=='offer_received'">
                                Best Price:
                                <field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value=='offer_accepted'">
                                <span>Selling Price: </span>
                                <field name="selling_price"/>
                            </div>
                            <div>
                                <field name="tag_ids" options="{'color_field': 'color'}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>